{
    "assetPath" : "../Assets/",
    "renderer" : 
    {
        "renderWindow" :
        {
            "width" : 720,
            "height" : 640,
            "title" : "Simple Scene Demo",
            "fullscreen" : false,
            "vsync" : true
        },
        "materialVertexShader" : "../../Data/Shaders/Gbuffer.vert",
        "materialFragmentShader" : "../../Demos/SimpleScene/GbufferDiffuseAlphaDiscard.frag",
        "renderStages" :
        [
            {
                "name" : "DeferredStage", 
                "implementation" :
                {
                    "GbufferRenderPass" :
                    {
                        "renderTargetLayer" : 0,
                        "flags" : ["CLEAR_COLOR", "CLEAR_DEPTH"],
                        "colorWrite" : true,
                        "depthWrite" : true,
                        "clearColor" : [0.0, 0.0, 0.0, 1.0],
                        "renderTarget" :
                        {
                            "width" : 720,
                            "height" : 640,
                            "numLayers" : 1,
                            "colorBuffers" : 
                            [
                                {
                                    "targetMode" : "Texture2D",
                                    "wrapMode" : "ClampEdge",
                                    "filterMode" : "Bilinear",
                                    "pixelFormat" : "Rgba8",
                                    "textureSlot" : "DiffuseBuffer"
                                },
                                {
                                    "targetMode" : "Texture2D",
                                    "wrapMode" : "ClampEdge",
                                    "filterMode" : "Bilinear",
                                    "pixelFormat" : "Rgba8",
                                    "textureSlot" : "SpecularBuffer"
                                },
                                {
                                    "targetMode" : "Texture2D",
                                    "wrapMode" : "ClampEdge",
                                    "filterMode" : "Bilinear",
                                    "pixelFormat" : "Rgba32F",
                                    "textureSlot" : "NormalBuffer"
                                }
                            ],
                            "depthBuffer" : 
                            {
                                "targetMode" : "Texture2D",
                                "wrapMode" : "ClampEdge",
                                "filterMode" : "Bilinear",
                                "pixelFormat" : "Depth24",
                                "textureSlot" : "Depth"
                            }
                        }
                    }
                }
            },
            {
                "name" : "ShadowStage",
                "implementation" :
                {
                    "shadowDepthRenderPass" :
                    {
                        "renderTargetLayer" : 0,
                        "flags" : ["CLEAR_DEPTH"],
                        "colorWrite" : false,
                        "depthWrite" : true,
                        "clearColor" : [0.0, 0.0, 0.0, 0.0],
                        "viewPort" : [0.0, 0.0, 2048, 2048],
                        "renderTarget" :
                        {
                            "width" : 2048,
                            "height" : 2048,
                            "numLayers" : 6,
                            "depthBuffer" : 
                            {
                                "targetMode" : "Texture2DArray",
                                "wrapMode" : "ClampEdge",
                                "filterMode" : "Bilinear",
                                "pixelFormat" : "Depth24",
                                "textureSlot" : "ShadowDepth"
                            }
                        },
                        "shaderPasses" :
                        [
                            {
                                "rasterState" : 
                                {
                                    "compareFunction" : "Less",
                                    "cullFace" : "Back"
                                },
                                "shaderProgram" :
                                {
                                    "vertexShader" :
                                    {  
                                        "sourceFile" : "../../Data/Shaders/ShadowDepth.vert"
                                    },
                                    "fragmentShader" :
                                    { 
                                        "sourceFile" : "../../Data/Shaders/ShadowDepth.frag"
                                    }
                                }
                            }
                        ]
                    },
                    "shadowOcclusionRenderPass" :
                    {
                        "renderTargetLayer" : 0,
                        "flags" : ["CLEAR_COLOR"],
                        "colorWrite" : true,
                        "depthWrite" : false,
                        "clearColor" : [0.0, 0.0, 0.0, 0.0],
                        "renderTarget" :
                        {
                            "width" : 720,
                            "height" : 640,
                            "numLayers" : 1,
                            "colorBuffers" : 
                            [
                                {
                                    "targetMode" : "Texture2D",
                                    "wrapMode" : "ClampEdge",
                                    "filterMode" : "Bilinear",
                                    "pixelFormat" : "Rgba8",
                                    "textureSlot" : "ShadowOcclusion"
                                }
                            ]
                        },
                        "shaderPasses" :
                        [
                            {
                                "vertexData" : "fullScreenQuad",
                                "rasterState" : 
                                {
                                    "blendFunction" : "Add"
                                },
                                "shaderProgram" :
                                {
                                    "vertexShader" :
                                    {
                                        "sourceFile" : "../../Data/Shaders/FullScreenQuad.vert",
                                        "defines" :
                                        [
                                            "USE_WORLD_PARAMETERS"
                                        ]
                                    },
                                    "fragmentShader" :
                                    {
                                        "sourceFile" : "../../Data/Shaders/ShadowOcclusion.frag",
                                        "defines" :
                                        [
                                            "MAX_SHADOW_LIGHTS 32"
                                        ]
                                    }
                                },
                                "shaderParameterBlocks" :
                                [
                                    {
                                        "name" : "u_shadowOcclusionParameters"
                                    },
                                    {
                                        "name" : "u_cameraParameters"
                                    }
                                ]
                            }
                        ]
                    }
                }
            },
            {
                "name" : "LightingStage",
                "implementation" :
                {
                    "lightTileWidth" : 32,
                    "lightTileHeight" : 32,
                    "renderPasses" :
                    [
                        {
                            "renderTargetLayer" : 0,
                            "flags" : ["CLEAR_COLOR"],
                            "colorWrite" : true,
                            "depthWrite" : false,
                            "clearColor" : [0.0, 0.0, 0.0, 0.0],
                            "renderTarget" :
                            {
                                "name" : "lightingTarget",
                                "width" : 720,
                                "height" : 640,
                                "numLayers" : 1,
                                "colorBuffers" : 
                                [
                                    {
                                        "targetMode" : "Texture2D",
                                        "wrapMode" : "ClampEdge",
                                        "filterMode" : "Bilinear",
                                        "pixelFormat" : "Rgba8",
                                        "textureSlot" : "Lighting"
                                    }
                                ]
                            },
                            "shaderPasses" :
                            [
                                {
                                    "vertexData" : "fullScreenQuad",
                                    "shaderProgram" :
                                    {
                                        "vertexShader" :
                                        {
                                            "sourceFile" : "../../Data/Shaders/FullScreenQuad.vert"
                                        },
                                        "fragmentShader" :
                                        {
                                            "sourceFile" : "../../Data/Shaders/TiledDeferredShading.frag",
                                            "defines" :
                                            [
                                                "MAX_NUM_LIGHTS 1000",
                                                "MAX_NUM_MATERIALS 255",
                                                "HDR"
                                            ]
                                        }
                                    },
                                    "shaderParameterBlocks" :
                                    [
                                        {
                                            "name" : "u_lightParameters"
                                        },
                                        {
                                            "name" : "u_lightGridParameters"
                                        },
                                        {
                                            "name" : "u_materialProperties"
                                        },
                                        {
                                            "name" : "u_renderTargetParameters"
                                        },
                                        {
                                            "name" : "u_cameraParameters"
                                        }
                                    ],
                                    "textures" :
                                    [
                                        {
                                            "targetMode" : "Texture2D",
                                            "wrapMode" : "ClampEdge",
                                            "filterMode" : "Nearest",
                                            "pixelFormat" : "Red32I",
                                            "textureSlot" : "TileLightInfo",
                                            "width" : 0,
                                            "height" : 0
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "name" : "PostProcessStage",
                "implementation" :
                {
                    "renderPasses" :
                    [
                        {
                            "renderTargetLayer" : 0,
                            "colorWrite" : true,
                            "depthWrite" : false,
                            "clearColor" : [0.0, 0.0, 0.0, 0.0],
                            "renderTarget" :
                            {
                                "name" : "lightingTarget"
                            },
                            "shaderPasses" :
                            [
                                {
                                    "vertexData" : "fullScreenQuad",
                                    "rasterState" :
                                    {
                                        "blendFunction" : "Add"
                                    },
                                    "shaderProgram" :
                                    {
                                        "vertexShader" :
                                        {
                                            "sourceFile" : "../../Data/Shaders/FullScreenQuad.vert",
                                            "defines" :
                                            [
                                                "USE_WORLD_PARAMETERS"
                                            ]
                                        },
                                        "fragmentShader" :
                                        {
                                            "sourceFile" : "../../Data/Shaders/Environment.frag"
                                        }
                                    },
                                    "shaderParameterBlocks" :
                                    [
                                        {
                                            "name" : "u_cameraParameters"
                                        }
                                    ],
                                    "textures" :
                                    [
                                        {
                                            "targetMode" : "TextureCubeMap",
                                            "wrapMode" : "ClampEdge",
                                            "filterMode" : "Bilinear",
                                            "pixelFormat" : "Rgb8",
                                            "textureSlot" : "SkyBoxTex",
                                            "width" : 0,
                                            "height" : 0
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "renderTargetLayer" : 0,
                            "flags" : ["CLEAR_COLOR"],
                            "colorWrite" : true,
                            "depthWrite" : false,
                            "clearColor" : [0.0, 0.0, 0.0, 0.0],
                            "renderTarget" :
                            {
                                "name" : "mainRenderTarget"
                            },
                            "shaderPasses" :
                            [
                                {
                                    "vertexData" : "fullScreenQuad",
                                    "shaderProgram" :
                                    {
                                        "vertexShader" :
                                        {
                                            "sourceFile" : "../../Data/Shaders/FullScreenQuad.vert"
                                        },
                                        "fragmentShader" :
                                        { 
                                            "sourceFile" : "../../Data/Shaders/AntiAliasing.frag",
                                            "defines" :
                                            [
                                                "FXAA_QUALITY__PRESET 12"
                                            ]
                                        }
                                    },
                                    "shaderParameterBlocks" :
                                    [
                                        {
                                            "name" : "u_renderTargetParameters"
                                        },
                                        {
                                            "name" : "u_cameraParameters"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    }
}